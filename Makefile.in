VPATH=%VPATH%

ifeq($(VSINSTALLDIR),)

CXX ?= g++
AR ?= ar
EXT_DEPS ?=
CFLAGS += -fPIC -fno-rtti
COUTFLAG = -o
CCOMPILEFLAG = -c
LIBSUFFIX = a

libjsglue.a: jsglue.o
	$(AR) rcs libjsglue.a jsglue.o

else

CXX ?= cl
LIB ?= lib
EXT_DEPS ?=
CFLAGS +=
COUTFLAG = -Fo:
CCOMPILEFLAG = -c
LIBSUFFIX = lib

libjsglue.a: jsglue.o
	$(LIB) -NOLOGO -OUT:libjsglue.lib jsglue.obj

endif

RUSTC ?= rustc
RUSTFLAGS ?=
RUSTDOC ?= rustdoc
RUSTDOC_FLAGS ?=
RUSTDOC_TARGET ?= doc

ifeq ($(shell $(CXX) -v 2>&1 | grep -c 'clang version\|Apple.*clang'),1)
CFLAGS += -Wno-c++0x-extensions -Wno-return-type-c-linkage -Wno-invalid-offsetof
endif

RUST_SRC = $(shell find $(VPATH)/src -type f -name '*.rs')

.PHONY: all
all: libjs.dummy

libjs.dummy: src/lib.rs $(RUST_SRC) libjsglue.$(LIBSUFFIX) $(EXT_DEPS)
	$(RUSTC) $(RUSTFLAGS) $< --out-dir .
	touch $@

js-test: src/lib.rs $(RUST_SRC) libjsglue.$(LIBSUFFIX)
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

jsglue.o: src/jsglue.cpp
	$(CXX) $(CFLAGS) $< $(COUTFLAG) $@ $(CCOMPILEFLAG)

.PHONY: doc
doc: $(RUSTDOC_TARGET)/js/index.html

$(RUSTDOC_TARGET)/js/index.html: src/lib.rs $(RUST_SRC) libjsglue.a $(EXT_DEPS)
	$(RUSTDOC) $(RUSTDOC_FLAGS) $< -o $(RUSTDOC_TARGET)

check: js-test
	./js-test

.PHONY: clean
clean:
	rm -f js-test *.o *.a *.so *.dylib *.rlib *.dll *.dummy
